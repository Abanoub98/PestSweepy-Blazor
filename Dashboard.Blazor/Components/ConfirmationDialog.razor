<MudDialog>
    <DialogContent>
        <MudText>@languageContainer.Keys[ConfirmationMessage]</MudText>
        <MudAlert Severity="Severity.Error" Dense="true" Class="my-2">@languageContainer.Keys["This action cannot be undone"].</MudAlert>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@languageContainer.Keys["Cancel"]</MudButton>
        <MudButton DisableElevation="true" Variant="Variant.Filled" Color="Color.Error" OnClick="Submit">@languageContainer.Keys["Ok"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public string ConfirmationMessage { get; set; } = "You want to delete this?";

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}