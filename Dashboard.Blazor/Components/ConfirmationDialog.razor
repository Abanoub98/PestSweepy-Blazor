@attribute [Authorize]

<MudDialog>
    <DialogContent>
        <!--begin::Alert-->
        <div class="alert bg-light-@(IsWarning? "warning" : "danger") d-flex flex-center flex-column py-10 px-10 mt-5">
            <!--begin::Icon-->
            <i class="ki-duotone ki-information-5 fs-5tx text-@(IsWarning? "warning" : "danger") mb-5"><span class="path1"></span><span class="path2"></span><span class="path3"></span></i>
            <!--end::Icon-->
            <!--begin::Wrapper-->
            <div class="text-center">
                <!--begin::Title-->
                <h1 class="fw-bold mb-5">@languageContainer.Keys["This is an alert"]</h1>
                <!--end::Title-->
                <!--begin::Separator-->
                <div class="separator separator-dashed border-@(IsWarning? "warning" : "danger") opacity-25 mb-5"></div>
                <!--end::Separator-->
                <!--begin::Content-->
                <div class="mb-9 fs-4 text-gray-900">
                    @languageContainer.Keys[ConfirmationMessage]<br/>@languageContainer.Keys["Note that this action cannot be undone!"]
                </div>
                <!--end::Content-->
                <!--begin::Buttons-->
                <div class="d-flex flex-center flex-wrap">
                    <button @onclick="Cancel" class="btn btn-outline btn-outline-@(IsWarning? "warning" : "danger") btn-active-@(IsWarning? "warning" : "danger") m-2">@languageContainer.Keys["Cancel"]</button>
                    <button @onclick="Submit" class="btn btn-@(IsWarning? "warning" : "danger") m-2">@languageContainer.Keys["Ok, I got it"]</button>
                </div>
                <!--end::Buttons-->
            </div>
            <!--end::Wrapper-->
        </div>
        <!--end::Alert-->
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public string ConfirmationMessage { get; set; } = "Are you sure you want to confirm deleting action?";
    [Parameter] public bool IsWarning { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}