@page "/Currencies/Details/{Id:int}"
@attribute [Authorize]
@inherits BasePage

<PageTitle>@languageContainer.Keys["Currency Details"]</PageTitle>
<MudBreadcrumbs Items="breadcrumbItems"></MudBreadcrumbs>

@if (currency is null)
{
    <DetailsSkeleton />
}
else
{
    <MudCard Elevation="25">
        <MudCardHeader Style="padding:20px">
            <CardHeaderAvatar>
                <MudAvatar Class="cursor-all-scroll" @onclick="() => ShowImagePreview(imageUrl + currency.Image)" Size="Size.Large" Rounded="true" Color="Color.Info">
                    <MudImage Src=@(imageUrl + currency.Image)></MudImage>
                </MudAvatar>
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.h5">
                    @currency.Name
                </MudText>
                @if (currency.OrderIndex is not null)
                {
                    <MudChip Variant="Variant.Text" Size="Size.Small" Icon="@Icons.Material.Outlined.Sort" Color="Color.Info">#@currency.OrderIndex</MudChip>
                }
                <MudChip Variant="Variant.Text" Size="Size.Small" Color="Color.Info" Icon="@Icons.Material.Filled.ColorLens">@currency.Code</MudChip>
                <MudChip Variant="Variant.Text" Size="Size.Small" Color="Color.Info" Icon="@Icons.Material.Filled.ColorLens">@currency.Symbol</MudChip>
            </CardHeaderContent>
            <CardHeaderActions>
                <div style="margin:10px">
                    <MudButton DisableElevation="true" Href="/Currencies" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.ArrowBack" Color="Color.Info">
                        Back to Currencies
                    </MudButton>
                </div>
            </CardHeaderActions>
        </MudCardHeader>
    </MudCard>
    <MudTabs SliderColor="Color.Info" Class="mt-5" Elevation="25" Rounded="true" ApplyEffectsToContainer=true Border=true PanelClass="h-100 px-6 pb-6 pt-0">
        <MudTabPanel Icon="@Icons.Material.Filled.Info" Text="More Info">

        </MudTabPanel>
    </MudTabs>
}