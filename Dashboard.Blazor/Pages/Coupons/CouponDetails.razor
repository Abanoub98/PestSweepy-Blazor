@page "/Coupons/Details/{Id:int}"
@attribute [Authorize(Roles = Roles.AdminRole)]
@inherits BasePage

<PageTitle>
    @languageContainer.Keys["Coupon Details"]
</PageTitle>
<MudBreadcrumbs Items="breadcrumbItems" />

@if (coupon is null)
{
    <FormLoadingSpinner IsBigForm="true" />
}
else
{
    <div class="card shadow-sm">
        <div class="card-header">
            <div class="fw-bold card-title">
                @languageContainer.Keys["Coupon Details"]
            </div>
            <div class="card-toolbar">
                <a href="/Coupons" class="btn btn-sm btn-primary me-3">
                    <MudIcon Icon="@Icons.Material.Filled.ArrowBack" />
                    @languageContainer.Keys["Back To"] @languageContainer.Keys["Coupons"]
                </a>
                <a @onclick="() => OpenForm(formUri,coupon.Id)" class="btn btn-sm  btn-success">
                    <MudIcon Icon="@Icons.Material.Filled.Edit" />
                    @languageContainer.Keys["Edit"]
                </a>
            </div>
        </div>
        <div class="card-body">
            <!--begin::Details content-->
            <div class="py-3 fs-6">
                <div class="row">
                    <div class="col-8">
                        <div class="row">
                            <div class="col-6">
                                <!--begin::Details item-->
                                <div class="fw-bold mb-1">@languageContainer.Keys["Name"]:</div>
                                <div class="text-gray-600 d-flex align-items-center">
                                    @coupon.Title
                                    <MudIcon Class="ms-2" Icon="@Icons.Material.Filled.RemoveRedEye" Color="Color.Success" />
                                </div>
                                <!--begin::Details item-->
                                <div class="fw-bold mt-5 mb-1">@languageContainer.Keys["Number Of Uses"]:</div>
                                <div class="text-gray-600">@coupon.NumOfUses</div>
                                <!--begin::Details item-->
                                <div class="fw-bold mt-5 mb-1">@languageContainer.Keys["Start & End Date"]:</div>
                                <div class="text-gray-600">@($"{coupon.StartDate} - {coupon.EndDate}")</div>
                            </div>
                            <div class="col-6 ps-5">
                                <!--begin::Details item-->
                                <div class="fw-bold mb-1">@languageContainer.Keys["Percentage"]:</div>
                                <div class="text-gray-600">@coupon.Percentage %</div>
                                <!--begin::Details item-->
                                <div class="fw-bold mt-5 mb-1">@languageContainer.Keys["Max Discount"]:</div>
                                <div class="text-gray-600">@coupon.MaxDiscount SAR</div>
                                <!--begin::Details item-->
                                <!--begin::Details item-->
                                <div class="fw-bold mt-5 mb-1">@languageContainer.Keys["Max Use"]:</div>
                                <div class="text-gray-600">@coupon.MaxUse</div>
                                <!--begin::Details item-->
                            </div>
                        </div>
                    </div>
                    <div @onclick="@(() => ShowImagePreview(imageUrl + coupon.Image))" class="col-4 text-center">
                        <MudImage Class="rounded-lg border border-gray-300" Width="300" Src=@(imageUrl + coupon.Image) />
                    </div>
                </div>
                <!--begin::Details item-->
                <div class="fw-bold mt-5 mb-1">@languageContainer.Keys["Description"]:</div>
                <div class="text-gray-800 p-3 rounded-lg border border-gray-400">@coupon.Description</div>
                <!--begin::Details item-->
                <!--begin::Details item-->
                <div class="fw-bold mt-5 mb-1">@languageContainer.Keys["Title"]:</div>
                <div class="text-gray-800 p-3 rounded-lg border border-gray-400">@coupon.Title</div>
                <!--begin::Details item-->
            </div>
            <!--end::Details content-->
        </div>
    </div>
}
