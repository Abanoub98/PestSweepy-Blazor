@page "/MyProfile"
@inherits BasePage

@if (accountProfile is null)
{
    <FormLoadingSpinner IsBigForm="true" />
}
else
{
    <div class="card mb-5 mb-xl-10">
        <div class="card-body pt-9 pb-0">
            <!--begin::Details-->
            <div class="d-flex flex-wrap flex-sm-nowrap mb-3">
                <!--begin: Pic-->
                <div class="me-7 mb-4">
                    <div class="symbol symbol-100px symbol-lg-160px symbol-fixed position-relative border border-gray-300">
                        @* <img src="@(accountProfile.EntityImage is not null? (imageUrl + accountProfile.EntityImage) : "/images/Logo.webp")" alt="image"> *@
                        <img src="/images/Logo.webp" alt="image">
                        <div class="position-absolute translate-middle bottom-0 start-100 mb-6 bg-success rounded-circle border border-4 border-body h-20px w-20px"></div>
                    </div>
                </div>
                <!--end::Pic-->
                <!--begin::Info-->
                <div class="flex-grow-1">
                    <!--begin::Title-->
                    <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
                        <!--begin::User-->
                        <div class="d-flex flex-column">
                            <!--begin::Name-->
                            <div class="d-flex align-items-center mb-2">
                                <a href="#" class="text-gray-900 text-hover-primary fs-2 fw-bold me-1">@accountProfile.EntityName</a>
                                <span class="badge badge-light-success fw-bold fs-8 py-1 px-2">
                                    @accountProfile.Role
                                </span>
                            </div>
                            <!--end::Name-->
                            <!--begin::Info-->
                            <div class="d-flex flex-wrap fw-semibold fs-6 mb-4 pe-2">
                                <a href="#" class="@(@accountProfile.PhoneNumber is null? "d-none" : "d-flex" ) align-items-center text-gray-500 text-hover-primary me-5 mb-2">
                                    <i class="ki-duotone ki-phone fs-4 me-1">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                    @accountProfile.PhoneNumber
                                </a>
                                <a href="#" class="d-flex align-items-center text-gray-500 text-hover-primary mb-2">
                                    <i class="ki-duotone ki-sms fs-4 me-1"><span class="path1"></span><span class="path2"></span></i>
                                    @accountProfile.Email
                                </a>
                            </div>
                            <!--end::Info-->
                        </div>
                        <!--end::User-->
                    </div>
                    <!--end::Title-->
                    <!--begin::Stats-->
                    <!--begin::Progress-->
                    <div class="d-flex align-items-center w-200px w-sm-300px flex-column mt-3">
                        <div class="d-flex justify-content-between w-100 mt-auto mb-2">
                            <span class="fw-semibold fs-6 text-gray-500">Profile Completion</span>
                            <span class="fw-bold fs-6">@profileCompletion%</span>
                        </div>

                        <div class="h-5px mx-3 w-100 bg-light mb-3">
                            <MudProgressLinear Color="@(profileCompletion == 100 ? Color.Success : Color.Warning)" Value="@(profileCompletion)" Rounded="true" />
                       </div>
                    </div>
                    <!--end::Progress-->
                    <!--end::Stats-->
                </div>
                <!--end::Info-->
            </div>
            <!--end::Details-->
        </div>
    </div>
    <AccountSettings Claims="claims" IsTwoFactorEnabled="accountProfile.TwoFactorEnabled" TwoFactorAuthChanged="ChangeTwoFactorEnabledValue" />
}