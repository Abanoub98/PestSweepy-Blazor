@page "/MyProfile"
@inherits BasePage

<div class="card mb-5 mb-xl-10">
    <div class="card-body pt-9 pb-0">
        <!--begin::Details-->
        <div class="d-flex flex-wrap flex-sm-nowrap mb-3">
            <!--begin: Pic-->
            <div class="me-7 mb-4">
                <div class="symbol symbol-100px symbol-lg-160px symbol-fixed position-relative">
                    <img src="/images/Logo.webp" alt="image">
                    <div class="position-absolute translate-middle bottom-0 start-100 mb-6 bg-success rounded-circle border border-4 border-body h-20px w-20px"></div>
                </div>
            </div>
            <!--end::Pic-->
            <!--begin::Info-->
            <div class="flex-grow-1">
                <!--begin::Title-->
                <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
                    <!--begin::User-->
                    <div class="d-flex flex-column">
                        <!--begin::Name-->
                        <div class="d-flex align-items-center mb-2">
                            <a class="text-gray-900 text-hover-primary fs-2 fw-bold me-1">
                                @if (accountProfile is null)
                                {
                                    <MudSkeleton Width="150px" Height="40px;" />
                                }
                                else
                                {
                                    @accountProfile.EntityName
                                }
                            </a>
                            <span class="badge badge-light-success fw-bold fs-8 py-1 px-2">
                                @if (accountProfile is null)
                                {
                                    <MudSkeleton Width="30px" Height="10px;" />
                                }
                                else
                                {
                                    @accountProfile.Role
                                }
                            </span>
                        </div>
                        <!--end::Name-->
                        <!--begin::Info-->
                        <div class="d-flex flex-wrap fw-semibold fs-6 mb-4 pe-2">
                            <a class="@(accountProfile is null ? "d-flex" : accountProfile.PhoneNumber is null? "d-none" : "d-flex" ) align-items-center text-gray-500 text-hover-primary me-5">
                                <i class="ki-duotone ki-phone fs-4 me-1">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                </i>
                                @if (accountProfile is null)
                                {
                                    <MudSkeleton Width="100px" Height="20px;" />
                                }
                                else
                                {
                                    @accountProfile.PhoneNumber
                                }
                            </a>
                            <MudTooltip Arrow="true" Duration="500" Text="Verified" Color="Color.Info">
                                <a class="@(accountProfile is null ? "d-flex" : accountProfile.Email is null? "d-none" : "d-flex" ) align-items-center text-gray-500 text-hover-primary">
                                    <i class="ki-duotone ki-sms fs-4 me-1"><span class="path1"></span><span class="path2"></span></i>
                                    @if (accountProfile is null)
                                    {
                                        <MudSkeleton Width="100px" Height="20px;" />
                                    }
                                    else
                                    {
                                        @accountProfile.Email
                                        @if (accountProfile.EmailConfirmed)
                                        {
                                            <i class="ki-duotone ki-verify fs-3 text-primary ms-1">
                                                <span class="path1"></span>
                                                <span class="path2"></span>
                                            </i>
                                        }
                                    }
                                </a>
                            </MudTooltip>
                        </div>
                        <!--end::Info-->
                    </div>
                    <!--end::User-->
                    <div class="d-flex my-4">
                        <a href="" @onclick="SignOut" class="btn btn-sm btn-danger me-2">Logout</a>
                    </div>
                </div>
                <!--end::Title-->
                <!--begin::Stats-->
                <!--begin::Progress-->
                <MudTooltip Duration="500" Class="@(profileCompletion == 100 ? "bg-light-success" :"bg-light-warning")">
                    <ChildContent>
                        <div class="d-flex align-items-center w-200px w-sm-300px flex-column mt-3">
                            <div class="d-flex justify-content-between w-100 mt-auto mb-2">
                                <span class="fw-semibold fs-6 text-gray-500">Profile Completion</span>
                                <div>
                                    <span class="fw-bold fs-6 me-1">@profileCompletion%</span>
                                    <MudIcon Color="@(profileCompletion == 100 ? Color.Success : Color.Warning)" Icon="@Icons.Material.Filled.Info" />
                                </div>
                            </div>
                            <div class="h-5px mx-3 w-100 bg-light mb-3">
                                <MudProgressLinear Color="@(profileCompletion == 100 ? Color.Success : Color.Warning)" Value="@(profileCompletion)" Rounded="true" />
                            </div>
                        </div>
                    </ChildContent>
                    <TooltipContent>
                        @if (accountProfile is not null)
                        {
                            <!--begin::Notice-->
                            <div class="notice d-flex rounded border-warning p-6">
                                <!--begin::Icon-->
                                @if (profileCompletion == 100)
                                {
                                    <i class="ki-duotone ki-shield-tick fs-2tx text-success me-4">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                }
                                else
                                {
                                    <i class="ki-duotone ki-information fs-2tx text-warning me-4">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                        <span class="path3"></span>
                                    </i>
                                }
                                <!--end::Icon-->
                                <!--begin::Wrapper-->
                                <div>
                                    <div class="d-flex flex-stack flex-grow-1 mb-2">
                                        <!--begin::Content-->
                                        <div class="fs-6 text-gray-700 fw-bold me-3">Profile Details</div>
                                        <!--end::Content-->
                                        <i class="ki-duotone ki-check-square text-success fs-5">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                        </i>
                                    </div>
                                    <div class="d-flex flex-stack flex-grow-1 mb-2">
                                        <!--begin::Content-->
                                        <div class="fs-6 @(accountProfile.EmailConfirmed? "text-gray-700 " : "text-danger") fw-bold me-3">Email Confirmed</div>
                                        <!--end::Content-->
                                        <i class="ki-duotone ki-@(accountProfile.EmailConfirmed? "check-square text-success" : "cross-square text-danger") fs-5">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                        </i>
                                    </div>
                                    <div class="d-flex flex-stack flex-grow-1 mb-2">
                                        <!--begin::Content-->
                                        <div class="fs-6 @(accountProfile.PhoneNumberConfirmed? "text-gray-700 " : "text-danger") fw-bold me-3">Phone Number Confirmed</div>
                                        <!--end::Content-->
                                        <i class="ki-duotone ki-@(accountProfile.PhoneNumberConfirmed? "check-square text-success" : "cross-square text-danger") fs-5">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                        </i>
                                    </div>
                                    <div class="d-flex flex-stack flex-grow-1">
                                        <!--begin::Content-->
                                        <div class="fs-6 @(accountProfile.TwoFactorEnabled? "text-gray-700 " : "text-danger") fw-bold me-3">Two-Factor Enabled Authentication</div>
                                        <!--end::Content-->
                                        <i class="ki-duotone ki-@(accountProfile.TwoFactorEnabled? "check-square text-success" : "cross-square text-danger") fs-5">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                        </i>
                                    </div>
                                </div>
                                <!--end::Wrapper-->
                            </div>
                            <!--end::Notice-->
                        }
                    </TooltipContent>
                </MudTooltip>
                <!--end::Progress-->
                <!--end::Stats-->
            </div>
            <!--end::Info-->
        </div>
        <!--end::Details-->
    </div>
</div>
<div class="card mb-5 mb-xl-10">
    <!--begin::Card header-->
    <div class="card-header cursor-pointer">
        <!--begin::Card title-->
        <div class="card-title m-0">
            <h3 class="fw-bold m-0">Profile Details</h3>
        </div>
        <!--end::Card title-->
    </div>
    <!--begin::Card header-->
    <!--begin::Card body-->
    <div class="card-body p-9">
        <!--begin::Row-->
        <div class="row mb-7">
            <!--begin::Label-->
            <label class="col-lg-4 fw-semibold text-muted">Full Name</label>
            <!--end::Label-->
            <!--begin::Col-->
            <div class="col-lg-8">
                <span class="fw-bold fs-6 text-gray-800">
                    @if (accountProfile is null)
                    {
                        <MudSkeleton Width="150px" Height="20px;" />
                    }
                    else
                    {
                        @accountProfile.EntityName
                    }
                </span>
            </div>
            <!--end::Col-->
        </div>
        <!--end::Row-->
        <!--begin::Input group-->
        <div class="row mb-7">
            <!--begin::Label-->
            <label class="col-lg-4 fw-semibold text-muted">Role</label>
            <!--end::Label-->
            <!--begin::Col-->
            <div class="col-lg-8 fv-row">
                <span class="fw-semibold text-gray-800 fs-6">
                    @if (accountProfile is null)
                    {
                        <MudSkeleton Width="150px" Height="20px;" />
                    }
                    else
                    {
                        @accountProfile.Role
                    }
                </span>
            </div>
            <!--end::Col-->
        </div>
        <!--end::Input group-->
        <!--begin::Input group-->
        <div class="row mb-7">
            <!--begin::Label-->
            <label class="col-lg-4 fw-semibold text-muted">
                Phone
            </label>
            <!--end::Label-->
            <!--begin::Col-->
            <div class="col-lg-8">
                <span class="fw-bold fs-6 text-gray-800">
                    @if (accountProfile is null)
                    {
                        <MudSkeleton Width="150px" Height="20px;" />
                    }
                    else
                    {
                        @accountProfile.PhoneNumber
                    }
                </span>
            </div>
            <!--end::Col-->
        </div>
        <!--end::Input group-->
        <!--begin::Input group-->
        <div class="row">
            <!--begin::Label-->
            <label class="col-lg-4 fw-semibold text-muted">Email</label>
            <!--end::Label-->
            <!--begin::Col-->
            <div class="col-lg-8 d-flex align-items-center">
                <a class="fw-semibold fs-6 text-gray-800 text-hover-primary me-2">
                    @if (accountProfile is null)
                    {
                        <MudSkeleton Width="150px" Height="20px;" />
                    }
                    else
                    {
                        @accountProfile.Email
                    }
                </a>
                @if (accountProfile is not null && accountProfile.EmailConfirmed)
                {
                    <span class="badge badge-success">Verified</span>
                }
            </div>
            <!--end::Col-->
        </div>
        <!--end::Input group-->
    </div>
    <!--end::Card body-->
</div>
@if (accountProfile is null)
{
    <FormLoadingSpinner IsBigForm="true" />
}
else
{
    <AccountSettings Email="@accountProfile.Email" Claims="claims" IsTwoFactorEnabled="accountProfile.TwoFactorEnabled" TwoFactorAuthChanged="ChangeTwoFactorEnabledValue" />
}
