                        <div class="p-3 w-100 w-md-25 border-1">
                            <MudTextField Variant="Variant.Outlined"
                                          @bind-Value="companyInfoForm.ProgressBarTitle1"
                                          For="@(() => companyInfoForm.ProgressBarTitle1)"
                                          Label="@languageContainer.Keys["Progress Bar Title 1"]" />

                            <MudNumericField T="int"
                                             Variant="Variant.Outlined"
                                             @bind-Value="companyInfoForm.ProgressBarValue1"
                                             For="@(() => companyInfoForm.ProgressBarValue1)"
                                             Label="@languageContainer.Keys["Progress Bar Value 1"]" />
                        </div>

                        <div class="p-3 w-100 w-md-25 border-1">
                            <MudTextField Variant="Variant.Outlined"
                                          @bind-Value="companyInfoForm.ProgressBarTitle2"
                                          For="@(() => companyInfoForm.ProgressBarTitle2)"
                                          Label="@languageContainer.Keys["Progress Bar Title 2"]" />

                            <MudNumericField T="int"
                                             Variant="Variant.Outlined"
                                             @bind-Value="companyInfoForm.ProgressBarValue2"
                                             For="@(() => companyInfoForm.ProgressBarValue2)"
                                             Label="@languageContainer.Keys["Progress Bar Value 2"]" />
                        </div>
                        <div class="p-3 w-100 w-md-25 border-1">
                            <MudTextField Variant="Variant.Outlined"
                                          @bind-Value="companyInfoForm.ProgressBarTitle3"
                                          For="@(() => companyInfoForm.ProgressBarTitle3)"
                                          Label="@languageContainer.Keys["Progress Bar Title 3"]" />

                            <MudNumericField T="int"
                                             Variant="Variant.Outlined"
                                             @bind-Value="companyInfoForm.ProgressBarValue3"
                                             For="@(() => companyInfoForm.ProgressBarValue3)"
                                             Label="@languageContainer.Keys["Progress Bar Value 3"]" />
                        </div>
                    </div>


                    <div class="flex-wrap gap-5 gap-md-0 d-flex flex-md-nowrap align-items-end p-3">
                        <ImageUpload ImageSelected="CaptureAboutUsImage"
                                     UploadedImageCleared="ClearAboutUsImage"
                                     CurrentImage="@(imageUrl + companyInfoForm.AboutUsImage)" />
                    </div>

                </MudCardContent>
            </MudCard>

            @* ========= CATEGORIES ========= *@
            <MudCard Class="p-3 mb-3 border" Elevation="0">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h5">@languageContainer.Keys["Categories Section"]</MudText>
                    </CardHeaderContent>
                </MudCardHeader>

                <MudCardContent>

                    <div class="d-flex flex-wrap flex-md-nowrap">

                        <div class="p-3 w-100 w-md-50">
                            <MudTextField Variant="Variant.Outlined"
                                          @bind-Value="companyInfoForm.CategoriesTitle"
                                          For="@(() => companyInfoForm.CategoriesTitle)"
                                          Label="@languageContainer.Keys["Categories Title"]" />
                        </div>

                        <div class="p-3 w-100 w-md-50">
                            <MudTextField Variant="Variant.Outlined"
                                          @bind-Value="companyInfoForm.CategoriesSubtitle"
                                          For="@(() => companyInfoForm.CategoriesSubtitle)"
                                          Label="@languageContainer.Keys["Categories Subtitle"]" />
