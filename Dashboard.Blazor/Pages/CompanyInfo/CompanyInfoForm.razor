                    @* Counter 3 & 4 *@
                    <div class="d-flex flex-wrap flex-md-nowrap">

                        <div class="p-3 w-100 w-md-50 border-1">
                            <MudTextField Variant="Variant.Outlined"
                                          @bind-Value="companyInfoForm.CounterTitle3"
                                          For="@(() => companyInfoForm.CounterTitle3)"
                                          Label="@languageContainer.Keys["Counter Title 3"]" />

                            <MudNumericField T="int"
                                             @bind-Value="companyInfoForm.CounterValue3"
                                             For="@(() => companyInfoForm.CounterValue3)"
