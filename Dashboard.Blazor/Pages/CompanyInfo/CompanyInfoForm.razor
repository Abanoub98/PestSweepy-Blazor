                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h5">@languageContainer.Keys["Counters Section"]</MudText>
                    </CardHeaderContent>
                </MudCardHeader>

                <MudCardContent>

                    @* Counter 1 & 2 *@
                    <div class="d-flex flex-wrap flex-md-nowrap">

                        <div class="p-3 w-100 w-md-50 border-1">
                            <MudTextField Variant="Variant.Outlined"
                                          @bind-Value="companyInfoForm.CounterTitle1"
                                          For="@(() => companyInfoForm.CounterTitle1)"
                                          Label="@languageContainer.Keys["Counter Title 1"]" />

                            <MudNumericField T="int"
                                             @bind-Value="companyInfoForm.CounterValue1"
                                             For="@(() => companyInfoForm.CounterValue1)"
                                             Variant="Variant.Outlined"
                                             Label="@languageContainer.Keys["Counter Value 1"]" />
                        </div>

                        <div class="p-3 w-100 w-md-50 border-1">
                            <MudTextField Variant="Variant.Outlined"
                                          @bind-Value="companyInfoForm.CounterTitle2"
                                          For="@(() => companyInfoForm.CounterTitle2)"
                                          Label="@languageContainer.Keys["Counter Title 2"]" />

                            <MudNumericField T="int"
                                             @bind-Value="companyInfoForm.CounterValue2"
                                             For="@(() => companyInfoForm.CounterValue2)"
                                             Variant="Variant.Outlined"
                                             Label="@languageContainer.Keys["Counter Value 2"]" />
                        </div>

