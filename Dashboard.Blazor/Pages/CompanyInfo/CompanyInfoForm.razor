                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h5">@languageContainer.Keys["Hero Section"]</MudText>
                    </CardHeaderContent>
                </MudCardHeader>

                <MudCardContent>

                    @* Title and Subtitle *@
                    <div class="d-flex flex-wrap flex-md-nowrap">

                        <div class="p-3 w-100 w-md-50">
                            <MudTextField Variant="Variant.Outlined"
                                          @bind-Value="companyInfoForm.HeroSectionTitle"
                                          For="@(() => companyInfoForm.HeroSectionTitle)"
                                          Label="@languageContainer.Keys["Hero Section Title"]" />
                        </div>

                        <div class="p-3 w-100 w-md-50">
                            <MudTextField Variant="Variant.Outlined"
                                          @bind-Value="companyInfoForm.HeroSectionSubtitle"
                                          For="@(() => companyInfoForm.HeroSectionSubtitle)"
                                          Label="@languageContainer.Keys["Hero Section Subtitle"]" />
                        </div>

                    </div>

                    @* Description *@
                    <div class="p-3 w-100">
                        <MudTextField Variant="Variant.Outlined" Lines="6"
