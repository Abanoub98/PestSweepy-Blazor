            </div>
            <!--end::Wrapper-->
        </div>
        <!--end::About-->
        <!--begin::Card-->
        <div class="card mb-4 bg-light text-center ">
            <!--begin::Body-->
            <div class="card-body py-5">
                @if (companyInfo is null)
                {
                    <div class="d-flex justify-content-center">
                        <MudSkeleton SkeletonType="SkeletonType.Rectangle" Animation="Animation.Wave" Height="30px" Width="30px" Class="mx-4" />
                        <MudSkeleton SkeletonType="SkeletonType.Rectangle" Animation="Animation.Wave" Height="30px" Width="30px" Class="mx-4" />
                        <MudSkeleton SkeletonType="SkeletonType.Rectangle" Animation="Animation.Wave" Height="30px" Width="30px" Class="mx-4" />
                        <MudSkeleton SkeletonType="SkeletonType.Rectangle" Animation="Animation.Wave" Height="30px" Width="30px" Class="mx-4" />
                        <MudSkeleton SkeletonType="SkeletonType.Rectangle" Animation="Animation.Wave" Height="30px" Width="30px" Class="mx-4" />
                        <MudSkeleton SkeletonType="SkeletonType.Rectangle" Animation="Animation.Wave" Height="30px" Width="30px" Class="mx-4" />
                    </div>
                }
                else
                {
                    <!--begin::Icon-->
                    <a href="@companyInfo.InstagramUrl" class="mx-4 @(string.IsNullOrEmpty(companyInfo.InstagramUrl)? "d-none" : string.Empty)">
