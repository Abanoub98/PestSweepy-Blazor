@page "/CompanyInfo"
@attribute [Authorize]
@inherits BasePage

<PageTitle>@languageContainer.Keys["Company Info"]</PageTitle>
<MudBreadcrumbs Items="breadcrumbItems"></MudBreadcrumbs>

<div class="card mb-5 border border-gray-300 shadow-sm">
    <!--begin::Card body-->
    <div class="card-body">
        <!--begin::Profile-->
        <div class="d-flex gap-7 align-items-start">
            <!--begin::Avatar-->
            @if (companyInfo is null)
            {
                <MudSkeleton SkeletonType="SkeletonType.Rectangle" Animation="Animation.Wave" Height="180px" Width="180px" />
            }
            else
            {
                <MudAvatar Class="border border-gray-300" Style="height:200px; width:200px;" Rounded="true" Color="Color.Primary">
                    <MudImage Src=@(imageUrl + companyInfo.Image)></MudImage>
                </MudAvatar>
            }
            <!--end::Avatar-->
            <div class="flex-grow-1 py-3">
                <!--end::Name-->
                <!--begin::Email-->
                <div class="d-flex align-items-center gap-2 mb-3 text-hover-primary">
                    <i class="ki-duotone ki-sms fs-2"><span class="path1"></span><span class="path2"></span></i>
                    <a class="text-muted fs-5 text-hover-primary">
                        @if (companyInfo is null)
                        {
                            <MudSkeleton Width="150px" Height="20px;" />
                        }
                        else
                        {
                            <span class="fw-bold">
                                @languageContainer.Keys["Contact Email"]:
                            </span>
                            @companyInfo.ContactEmail
                        }
                    </a>
                </div>
                <!--end::Email-->
                <!--begin::Phone-->
                <div class="d-flex align-items-center gap-2 mb-3  text-hover-primary">
                    <i class="ki-duotone ki-phone fs-2"><span class="path1"></span><span class="path2"></span></i>
                    <a class="text-muted fs-5 text-hover-primary">
                        @if (companyInfo is null)
                        {
                            <MudSkeleton Width="150px" Height="20px;" />
                        }
                        else
                        {
                            <span class="fw-bold">
                                @languageContainer.Keys["Contact Phone"]:
                            </span>
                            @companyInfo.ContactPhone
                        }
                    </a>
                </div>
                <!--end::Phone-->
                <!--begin::Phone-->
                <div class="d-flex align-items-center gap-2 mb-3  text-hover-primary">
                    <i class="ki-duotone ki-tablet fs-2">
                        <span class="path1"></span>
                        <span class="path2"></span>
                        <span class="path3"></span>
                    </i>
                    <a class="text-muted fs-5 text-hover-primary">
                        @if (companyInfo is null)
                        {
                            <MudSkeleton Width="150px" Height="20px;" />
                        }
                        else
                        {
                            <span class="fw-bold">
                                @languageContainer.Keys["Contact Mobile"]:
                            </span>
                            @companyInfo.ContactMobile
                        }
                    </a>
                </div>
                <!--end::Phone-->
                <!--begin::Phone-->
                <div class="d-flex align-items-center gap-2 mb-3 text-hover-primary">
                    <i class="ki-duotone ki-shop fs-2">
                        <span class="path1"></span>
                        <span class="path2"></span>
                        <span class="path3"></span>
                        <span class="path4"></span>
                        <span class="path5"></span>
                    </i>                    
                    <a class="text-muted fs-5 text-hover-primary">
                        @if (companyInfo is null)
                        {
                            <MudSkeleton Width="150px" Height="20px;" />
                        }
                        else
                        {
                            <span class="fw-bold">
                                @languageContainer.Keys["VAT Registration Number"]:
                            </span>
                            @companyInfo.VatRegistrationNumber
                        }
                    </a>
                </div>
                <!--end::Phone-->
                <!--begin::Phone-->
                <div class="d-flex align-items-center gap-2 mb-3 text-hover-primary">
                    <i class="ki-duotone ki-icon fs-2">
                        <span class="path1"></span>
                        <span class="path2"></span>
                        <span class="path3"></span>
                    </i>
                    <a class="text-muted fs-5 text-hover-primary">
                        @if (companyInfo is null)
                        {
                            <MudSkeleton Width="150px" Height="20px;" />
                        }
                        else
                        {
                            <span class="fw-bold">
                                @languageContainer.Keys["Hotline"]:
                            </span>
                            @companyInfo.Hotline
                        }
                    </a>
                </div>
                <!--end::Phone-->
                <!--begin::Phone-->
                <div class="d-flex align-items-center gap-2 text-hover-primary">
                    <i class="ki-duotone ki-geolocation fs-2">
                        <span class="path1"></span>
                        <span class="path2"></span>
                    </i>
                    <a class="text-muted fs-5 text-hover-primary">
                        @if (companyInfo is null)
                        {
                            <MudSkeleton Width="150px" Height="20px;" />
                        }
                        else
                        {
                            <span class="fw-bold">
                                @languageContainer.Keys["Address"]:
                            </span>
                            @companyInfo.Address
                        }
                    </a>
                </div>
                <!--end::Phone-->
            </div>
            <!--end::Info-->
            <div class="d-flex my-4">
                <a href="/CompanyInfo/Form" class="btn btn-primary">
                    <i class="fa-solid fa-pen-to-square me-1"></i>
                    @languageContainer.Keys["Edit"]
                </a>
            </div>
        </div>
        <!--end::Profile-->
    </div>
    <!--end::Card body-->
</div>

