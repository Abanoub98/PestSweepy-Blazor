                <div class="text-center mb-5">
                    <!--begin::Title-->
                    <h3 class="fs-1 fw-bold xtext-gray-900">@languageContainer.Keys["Who We Are"]</h3>
                    <!--end::Title-->
                </div>
                <!--begin::Description-->
                <div class="fs-5 fw-semibold text-gray-600">
                    @if (companyInfo is null)
                    {
                        <MudSkeleton Animation="Animation.Wave" Width="95%" />
                        <MudSkeleton Animation="Animation.Wave" Width="100%" />
                        <MudSkeleton Animation="Animation.Wave" Width="95%" />
                        <MudSkeleton Animation="Animation.Wave" Width="100%" />
                        <MudSkeleton Animation="Animation.Wave" Width="100%" />
