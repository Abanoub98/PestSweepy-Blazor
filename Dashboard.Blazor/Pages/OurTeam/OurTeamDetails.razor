@page "/OurTeam/Details/{Id:int}"
@attribute [Authorize(Roles = Roles.AdminRole)]
@inherits BasePage

<PageTitle>
    @($"{languageContainer.Keys["Our Team"]} {languageContainer.Keys["Details"]}")
</PageTitle>

<MudBreadcrumbs Items="breadcrumbItems"></MudBreadcrumbs>

@if (ourTeam is null)
{
    <FormLoadingSpinner IsBigForm="true" />
}
else
{
    <div class="card shadow-sm">
        <div class="card-header">
            <div class="fw-bold card-title">
                @($"{ourTeam.Name} {languageContainer.Keys["Details"]}")
            </div>
            <div class="card-toolbar">
                <a href="/OurTeam" class="btn btn-sm btn-primary me-3">
                    <MudIcon Icon="@Icons.Material.Filled.ArrowBack" />
                    @languageContainer.Keys["Back To"] @languageContainer.Keys["Our Team"]
                </a>
                <a @onclick="() => OpenForm(formUri, ourTeam.Id)" class="btn btn-sm btn-success">
                    <MudIcon Icon="@Icons.Material.Filled.Edit" />
                    @languageContainer.Keys["Edit"]
                </a>
            </div>
        </div>
        <div class="card-body">
            <!--begin::Details content-->
            <div class="py-3 fs-6">
                <div class="row">
                    <div class="col-8 align-self-start">
                        <!-- Name -->
                        <div class="fw-bold mt-5 mb-1">@languageContainer.Keys["Name"]:</div>
                        <div class="text-gray-600">@ourTeam.Name</div>

                        <!-- Title -->
                        <div class="fw-bold mt-5 mb-1">@languageContainer.Keys["Title"]:</div>
                        <div class="text-gray-600">@ourTeam.Title</div>

                        <!-- Years Of Experience -->
                        <div class="fw-bold mt-5 mb-1">
                            @languageContainer.Keys["Years Of Experience"]:
                        </div>
                        <div class="text-gray-600">
                            @(ourTeam.YearsOfExperience is null ? "-" : ourTeam.YearsOfExperience)
                        </div>

                        <!-- Order Index -->
                        <div class="fw-bold mt-5 mb-1">@languageContainer.Keys["Order Index"]:</div>
                        <div class="text-gray-600">
                            @(ourTeam.OrderIndex is null ? "-" : ourTeam.OrderIndex)
                        </div>
                    </div>

                    <!-- Image -->
                    <div @onclick="@(() => ShowImagePreview(imageUrl + ourTeam.Image))"
                         class="col-4 text-center">
                        <MudImage Class="rounded-lg border border-gray-300 mt-5"
                                  Width="300"
                                  Src="@(imageUrl + ourTeam.Image)" />
                    </div>
                </div>
            </div>
            <!--end::Details content-->
        </div>
    </div>

    @* لو حابب تضيف حاجة مرتبطة بالعضو (مثلاً TeamMemberProjects أو Logs) نفس فكرة الكومنت تحت *@
    @* <div class="card shadow-sm mt-10">
        <div class="card-body">
            <MemberSomething MemberId="ourTeam.Id" />
        </div>
    </div> *@
}
